#include <stdio.h>

int main() {
    int n, a = 0, b = 1, next, sum = 0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");

    for (int i = 1; i <= n; i++) {
        printf("%d ", a);
        sum += a;
        next = a + b;
        a = b;
        b = next;
    }

    printf("\nSum of Fibonacci series = %d\n", sum);

    return 0;
}
