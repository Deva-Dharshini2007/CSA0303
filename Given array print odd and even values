#include <stdio.h>

int main() {
    int arr[] = {10, 15, 22, 33, 40, 55, 60};
    int size = sizeof(arr) / sizeof(arr[0]);

    printf("Even numbers in the array:\n");
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 == 0) {
            printf("%d ", arr[i]);
        }
    }

    printf("\nOdd numbers in the array:\n");
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 != 0) {
            printf("%d ", arr[i]);
        }
    }

    printf("\n");
    return 0;
}
